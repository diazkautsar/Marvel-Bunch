<!DOCTYPE html>
<html lang="en">
    <%- include('./partials/head.ejs', {data: 'MARVEL BUNCH'}) %>
<body>
    <nav class="navbar navbar-expand-lg navbar-dark bg-dark">
        <a class="navbar-brand" href="#">DH</a>
        <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarSupportedContent"
            aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
            <span class="navbar-toggler-icon"></span>
        </button>
    
        <div class="collapse navbar-collapse" id="navbarSupportedContent">
            <ul class="navbar-nav mr-auto">
                <li class="nav-item active">
                    <a class="nav-link" href="/users/<%= id %>">Home <span class="sr-only">(current)</span></a>
                </li>
                <li class="nav-item active">
                    <a class="nav-link" href="/users/<%= id %>/list ">List <span class="sr-only">(current)</span></a>
                </li>
                <li class="nav-item active">
                    <a class="nav-link" href="/users/<%= id %>/logout">Logout<span class="sr-only">(current)</span></a>
                </li>
            </ul>
        </div>
    </nav>
    
    <center>
        <h1><%= dataUser.name %></h1>
        
        <% if (heroes.length > 0) { %>
            <h2>Ini adalah koleksi Super Hero Mu</h2>
            <table border="1" style="text-align:center" >
                <tr>
                    <th>No.</th>
                    <th>Name Hero</th>
                    <th>Photo</th>
                    <th>Action</th>
                </tr>
                <% let no = 0;
                heroes.forEach(data => {
                    no++ %>
                    <tr>
                        <td> <%= no %> </td>
                        <td> <%= data.Hero.name %> </td>
                        <td> <img src="<%= data.Hero.link_image %>" style="width: 100px; height: 100px;"> </td>
                        <td>
                            <a href="/users/<%= dataUser.id %>/<%= data.Hero.id %>/remove" onclick="return confirm('Are You Sure Remove This Hero')" >Remove</a>
                        </td>
                    </tr>
                <% }) %>
            </table>
            <h1><%= heroes[0].name %></h1>
        <% }  else { %>
            <h2>Maaf Kamu Belum Mempunyai Koleksi Hero</h2>
        <% } %>
    </center>
    
</body>
</html>